{
  "info": {
    "_postman_id": "task-manager-collection",
    "name": "Task Manager API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/auth/login",
          "protocol": "http",
          "host": [
            "localhost:5000"
          ],
          "path": [
            "api",
            "auth",
            "login"
          ]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"admin@example.com\",\n  \"password\": \"admin123\"\n}"
        }
      }
    },
    {
      "name": "Get Boards",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/boards",
          "protocol": "http",
          "host": [
            "localhost:5000"
          ],
          "path": [
            "api",
            "boards"
          ]
        }
      }
    },
    {
      "name": "Top Active Users",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{jwtToken}}"
          }
        ],
        "url": {
          "raw": "http://localhost:5000/api/analytics/top-active-users",
          "protocol": "http",
          "host": [
            "localhost:5000"
          ],
          "path": [
            "api",
            "analytics",
            "top-active-users"
          ]
        }
      }
    }
  ]
}